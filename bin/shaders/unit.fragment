varying vec2 varTexCoord;
varying vec4 position;

uniform vec4 unit_color;
uniform sampler2D tex;
uniform bool active;

void main()
{
	if(active)
	{
		gl_FragData[0] = unit_color * texture2D(tex, varTexCoord);
	}
	else
	{
		gl_FragData[0] = unit_color;
	}
	gl_FragData[1] = vec4(0, 1, 0, 1);
	gl_FragData[2] = position;
}

